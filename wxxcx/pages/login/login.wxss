page, .container{
  width: 100%;
  height: 100%;
}
input {
  border: 1px solid #000;
  padding: 20px 10px;
  width: calc(60% - 20px);
  border-radius: 5px;
  position: absolute;
  left: 20%;
}
button {
  display: block;
  padding: 10px 0;
  width: 60%;
  background: #f27734;
  color: #fff;
  border-color: #f27734;
  margin: 0 auto;
  position: absolute;
  left: 20%;
  top: 330px;
}
text {
  height: 40px;
  line-height: 40px;
  position: absolute;
  left: 20%;
  top: 280px;
  color: #f27734;
}