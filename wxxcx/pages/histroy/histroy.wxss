/**histroy.wxss**/
page, .container{
  width: 100%;
  height: 100%;
}
ec-canvas {
  width: 100%;
  height: 300px;
  position: absolute;
  top: 0;
}
.hisList {
  height: calc(100% - 300px);
  width: 100%;
  position: absolute;
  bottom: 0;
}
.hisLi {
  width: calc(90% - 10px);
  margin: 0 5%;
  overflow: hidden;
  padding: 5px;
  border-bottom: #ccc dotted 1px; 
}
.month {
  float: left;
  color: #555;
  font-size: 14px;
}
.month text {
  font-size: 16px;
  margin-right: 3px;
}
.spend {
  color: #999;
  font-size: 14px;
  float: right;
 text-align: right;
}